DROP SCHEMA IF EXISTS public CASCADE;
CREATE SCHEMA public;

GRANT USAGE, CREATE ON SCHEMA public TO anon, authenticated, service_role, postgres;
GRANT ALL ON SCHEMA public TO postgres;

ALTER DEFAULT PRIVILEGES IN SCHEMA public 
    GRANT ALL ON TABLES TO postgres, anon, authenticated, service_role;

ALTER DEFAULT PRIVILEGES IN SCHEMA public 
    GRANT ALL ON SEQUENCES TO postgres, anon, authenticated, service_role;

ALTER DEFAULT PRIVILEGES IN SCHEMA public 
    GRANT ALL ON FUNCTIONS TO postgres, anon, authenticated, service_role;

CREATE TABLE public.department (
    department_id SERIAL PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    floor_plan_image TEXT,
    floor_plan_image_type VARCHAR(10) DEFAULT 'png',
    status VARCHAR(20) DEFAULT 'active',
    queue_color VARCHAR(50),
    is_scheduled BOOLEAN DEFAULT FALSE,
    available_days JSONB,
    service_type VARCHAR(50) DEFAULT 'general',
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.admin (
    id SERIAL PRIMARY KEY,
    healthadmin_id VARCHAR(20) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL,
    name VARCHAR(200) NOT NULL,
    position VARCHAR(100),
    contact_no VARCHAR(20),
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.staff (
    id SERIAL PRIMARY KEY,
    staff_id VARCHAR(20) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL,
    name VARCHAR(200) NOT NULL,
    role VARCHAR(50) NOT NULL,
    specialization VARCHAR(100),
    department_id INTEGER REFERENCES public.department(department_id),
    license_no VARCHAR(50),
    contact_no VARCHAR(20),
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    last_login TIMESTAMP WITH TIME ZONE,
    is_online BOOLEAN DEFAULT FALSE,
    last_activity TIMESTAMP WITH TIME ZONE
);

CREATE TABLE public.pre_registration (
    temp_id SERIAL PRIMARY KEY,
    name VARCHAR(200) NOT NULL,
    birthday DATE,
    age INTEGER,
    sex VARCHAR(10) CHECK (sex IN ('Male', 'Female', 'Other')),
    address TEXT,
    contact_no VARCHAR(20),
    email VARCHAR(255),
    qr_code VARCHAR(100),
    created_date DATE DEFAULT CURRENT_DATE,
    symptoms TEXT,
    emergency_contact_name VARCHAR(200),
    emergency_contact_relationship VARCHAR(50),
    emergency_contact_no VARCHAR(20),
    duration VARCHAR(100),
    severity VARCHAR(50),
    previous_treatment TEXT,
    allergies TEXT,
    medications TEXT,
    preferred_date DATE,
    preferred_time_slot VARCHAR(50),
    scheduled_date DATE,
    expires_at TIMESTAMP WITH TIME ZONE,
    status VARCHAR(20) DEFAULT 'pending',
    temp_patient_id VARCHAR(20) UNIQUE,
    next_available_date DATE,
    next_available_time VARCHAR(20),
    department_id INTEGER REFERENCES public.department(department_id),
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.outpatient (
    id SERIAL PRIMARY KEY,
    patient_id VARCHAR(20) UNIQUE NOT NULL,
    name VARCHAR(200) NOT NULL,
    birthday DATE,
    age INTEGER,
    sex VARCHAR(10) CHECK (sex IN ('Male', 'Female', 'Other')),
    address TEXT,
    contact_no VARCHAR(20),
    email VARCHAR(255),
    registration_date DATE DEFAULT CURRENT_DATE,
    temp_id INTEGER REFERENCES public.pre_registration(temp_id) ON DELETE SET NULL,
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.emergency_contact (
    emergency_id SERIAL PRIMARY KEY,
    patient_id INTEGER REFERENCES public.outpatient(id),
    name VARCHAR(200) NOT NULL,
    contact_number VARCHAR(20) NOT NULL,
    relationship VARCHAR(50) NOT NULL,
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.visit (
    visit_id SERIAL PRIMARY KEY,
    patient_id INTEGER REFERENCES public.outpatient(id),
    visit_date DATE DEFAULT CURRENT_DATE,
    visit_time TIME DEFAULT CURRENT_TIME,
    appointment_type VARCHAR(50),
    symptoms TEXT,
    duration VARCHAR(100),
    severity VARCHAR(50),
    previous_treatment TEXT,
    allergies TEXT,
    medications TEXT,
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

-- ============================================================================
-- ENHANCED QUEUE TABLE WITH SCHEDULED_DATE COLUMN
-- ============================================================================
CREATE TABLE public.queue (
    queue_id SERIAL PRIMARY KEY,
    visit_id INTEGER REFERENCES public.visit(visit_id),
    department_id INTEGER REFERENCES public.department(department_id),
    queue_no INTEGER NOT NULL,
    status VARCHAR(20) DEFAULT 'waiting',
    scheduled_date DATE DEFAULT CURRENT_DATE,
    created_time TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

COMMENT ON COLUMN public.queue.scheduled_date IS 
'The date when this queue entry becomes active. For general departments this equals visit_date. For subspecialty departments this is the scheduled appointment date.';

CREATE TABLE public.diagnosis (
    diagnosis_id SERIAL PRIMARY KEY,
    visit_id INTEGER REFERENCES public.visit(visit_id),
    patient_id INTEGER REFERENCES public.outpatient(id),
    staff_id INTEGER REFERENCES public.staff(id),
    diagnosis_code VARCHAR(20),
    diagnosis_description TEXT NOT NULL,
    diagnosis_type VARCHAR(50),
    severity VARCHAR(20),
    notes TEXT,
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.lab_request (
    request_id SERIAL PRIMARY KEY,
    visit_id INTEGER REFERENCES public.visit(visit_id),
    staff_id INTEGER REFERENCES public.staff(id),
    test_type VARCHAR(100) NOT NULL,
    due_date DATE,
    status VARCHAR(20) DEFAULT 'pending',
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.lab_result (
    result_id SERIAL PRIMARY KEY,
    request_id INTEGER REFERENCES public.lab_request(request_id),
    staff_id INTEGER REFERENCES public.staff(id),
    patient_id INTEGER REFERENCES public.outpatient(id),
    file_path TEXT,
    upload_date DATE DEFAULT CURRENT_DATE,
    results JSONB,
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.medical_record (
    record_id SERIAL PRIMARY KEY,
    patient_id INTEGER REFERENCES public.outpatient(id),
    visit_id INTEGER REFERENCES public.visit(visit_id),
    result_id INTEGER REFERENCES public.lab_result(result_id),
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.otp_verification (
    id SERIAL PRIMARY KEY,
    patient_id VARCHAR(20) NOT NULL,
    contact_info VARCHAR(255) NOT NULL,
    contact_type VARCHAR(10) NOT NULL,
    otp_code VARCHAR(6) NOT NULL,
    expires_at TIMESTAMP WITH TIME ZONE NOT NULL,
    is_verified BOOLEAN DEFAULT FALSE,
    attempts INTEGER DEFAULT 0,
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.symptoms (
    symptom_id SERIAL PRIMARY KEY,
    name VARCHAR(200) NOT NULL,
    category VARCHAR(100) NOT NULL,
    department_id INTEGER REFERENCES public.department(department_id),
    age_group VARCHAR(20) DEFAULT 'all',
    priority VARCHAR(20) DEFAULT 'normal',
    is_active BOOLEAN DEFAULT TRUE,
    is_routine_care BOOLEAN DEFAULT FALSE,
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.health_questionnaire (
    assessment_id SERIAL PRIMARY KEY,
    patient_id INTEGER REFERENCES public.outpatient(id) NOT NULL,
    temp_assessment_id VARCHAR(20) UNIQUE NOT NULL,
    symptoms TEXT,
    duration VARCHAR(100),
    severity VARCHAR(50),
    previous_treatment TEXT,
    allergies TEXT,
    medications TEXT,
    preferred_date DATE,
    preferred_time_slot VARCHAR(50),
    status VARCHAR(20) DEFAULT 'pending',
    expires_at TIMESTAMP WITH TIME ZONE NOT NULL,
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.symptom_department (
    mapping_id SERIAL PRIMARY KEY,
    symptom_name VARCHAR(200) NOT NULL,
    department_id INTEGER REFERENCES public.department(department_id),
    priority INTEGER DEFAULT 1,
    age_min INTEGER DEFAULT 0,
    age_max INTEGER DEFAULT 999,
    conditions JSONB,
    is_active BOOLEAN DEFAULT TRUE,
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE TABLE public.navigation_steps (
    step_id SERIAL PRIMARY KEY,
    department_id INTEGER REFERENCES public.department(department_id),
    step_order INTEGER NOT NULL,
    location_name VARCHAR(200) NOT NULL,
    description TEXT NOT NULL,
    floor_number VARCHAR(20),
    room_numbers VARCHAR(100),
    is_active BOOLEAN DEFAULT TRUE,
    created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
    UNIQUE(department_id, step_order)
);

CREATE TABLE public.time_slots (
    slot_id SERIAL PRIMARY KEY,
    slot_name VARCHAR(50) NOT NULL,
    display_label VARCHAR(100) NOT NULL,
    start_time TIME NOT NULL,
    end_time TIME NOT NULL,
    is_active BOOLEAN DEFAULT TRUE
);

CREATE TABLE public.relationship_types (
    id SERIAL PRIMARY KEY,
    relationship_name VARCHAR(50) NOT NULL,
    is_active BOOLEAN DEFAULT TRUE
);

CREATE TABLE public.severity_levels (
    id SERIAL PRIMARY KEY,
    level_name VARCHAR(50) NOT NULL,
    description TEXT,
    is_active BOOLEAN DEFAULT TRUE
);

CREATE TABLE public.duration_options (
    id SERIAL PRIMARY KEY,
    duration_text VARCHAR(100) NOT NULL,
    is_active BOOLEAN DEFAULT TRUE
);

-- ============================================================================
-- INDEXES (INCLUDING NEW QUEUE INDEXES)
-- ============================================================================
CREATE INDEX idx_staff_staff_id ON public.staff(staff_id);
CREATE INDEX idx_staff_role ON public.staff(role);
CREATE INDEX idx_staff_department ON public.staff(department_id);
CREATE INDEX idx_outpatient_patient_id ON public.outpatient(patient_id);
CREATE INDEX idx_visit_patient_id ON public.visit(patient_id);
CREATE INDEX idx_visit_date ON public.visit(visit_date);
CREATE INDEX idx_queue_status ON public.queue(status);
CREATE INDEX idx_queue_scheduled_date ON public.queue(scheduled_date);
CREATE INDEX idx_queue_dept_scheduled ON public.queue(department_id, scheduled_date, status);
CREATE INDEX idx_lab_request_status ON public.lab_request(status);
CREATE INDEX idx_lab_result_staff_id ON public.lab_result(staff_id);
CREATE INDEX idx_emergency_contact_patient_id ON public.emergency_contact(patient_id);
CREATE INDEX idx_diagnosis_patient_id ON public.diagnosis(patient_id);
CREATE INDEX idx_diagnosis_visit_id ON public.diagnosis(visit_id);
CREATE INDEX idx_diagnosis_staff_id ON public.diagnosis(staff_id);
CREATE INDEX idx_otp_verification_patient_id ON public.otp_verification(patient_id);
CREATE INDEX idx_otp_verification_contact ON public.otp_verification(contact_info);
CREATE INDEX idx_otp_verification_expires ON public.otp_verification(expires_at);
CREATE INDEX idx_symptoms_category ON public.symptoms(category);
CREATE INDEX idx_symptoms_active ON public.symptoms(is_active);
CREATE INDEX idx_symptoms_age_group ON public.symptoms(age_group);
CREATE INDEX idx_pre_registration_expires_status ON public.pre_registration(expires_at, status);
CREATE INDEX idx_pre_registration_preferred_date ON public.pre_registration(preferred_date);
CREATE INDEX idx_pre_registration_status ON public.pre_registration(status);
CREATE INDEX idx_pre_registration_next_available ON public.pre_registration(next_available_date, next_available_time);
CREATE INDEX idx_health_questionnaire_patient_id ON public.health_questionnaire(patient_id);
CREATE INDEX idx_health_questionnaire_temp_id ON public.health_questionnaire(temp_assessment_id);
CREATE INDEX idx_health_questionnaire_expires ON public.health_questionnaire(expires_at, status);
CREATE INDEX idx_health_questionnaire_status ON public.health_questionnaire(status);
CREATE INDEX idx_symptom_department_active ON public.symptom_department(is_active);
CREATE INDEX idx_symptom_department_priority ON public.symptom_department(priority DESC);
CREATE INDEX idx_navigation_steps_dept ON public.navigation_steps(department_id, step_order);
CREATE INDEX idx_department_scheduled ON public.department(is_scheduled, service_type);
CREATE INDEX idx_department_queue_color ON public.department(queue_color);

-- ============================================================================
-- GRANT PRIVILEGES
-- ============================================================================
DO $$
DECLARE r RECORD;
BEGIN
    FOR r IN SELECT tablename FROM pg_tables WHERE schemaname = 'public' LOOP
        EXECUTE 'GRANT ALL PRIVILEGES ON public.' || quote_ident(r.tablename) || 
                ' TO postgres, anon, authenticated, service_role';
    END LOOP;

    FOR r IN SELECT sequence_name FROM information_schema.sequences WHERE sequence_schema = 'public' LOOP
        EXECUTE 'GRANT ALL PRIVILEGES ON SEQUENCE public.' || quote_ident(r.sequence_name) || 
                ' TO postgres, anon, authenticated, service_role';
    END LOOP;
END$$;

DO $$
DECLARE r RECORD;
BEGIN
    FOR r IN SELECT tablename FROM pg_tables WHERE schemaname = 'public' LOOP
        EXECUTE 'ALTER TABLE public.' || quote_ident(r.tablename) || ' DISABLE ROW LEVEL SECURITY';
    END LOOP;
END$$;

-- ============================================================================
-- FUNCTIONS AND TRIGGERS
-- ============================================================================
CREATE EXTENSION IF NOT EXISTS pgcrypto;

CREATE OR REPLACE FUNCTION hash_password_trigger()
RETURNS TRIGGER AS $$
BEGIN
    IF NEW.password IS NOT NULL AND NOT (NEW.password LIKE '$2%') THEN
        NEW.password := crypt(NEW.password, gen_salt('bf', 12));
    END IF;
    RETURN NEW;
END;
$$ LANGUAGE plpgsql;

DROP TRIGGER IF EXISTS hash_admin_password_trigger ON public.admin;
CREATE TRIGGER hash_admin_password_trigger
    BEFORE INSERT OR UPDATE OF password ON public.admin
    FOR EACH ROW
    EXECUTE FUNCTION hash_password_trigger();

DROP TRIGGER IF EXISTS hash_staff_password_trigger ON public.staff;
CREATE TRIGGER hash_staff_password_trigger
    BEFORE INSERT OR UPDATE OF password ON public.staff
    FOR EACH ROW
    EXECUTE FUNCTION hash_password_trigger();

GRANT EXECUTE ON FUNCTION hash_password_trigger() TO postgres, anon, authenticated, service_role;

CREATE OR REPLACE FUNCTION cleanup_completed_pre_registration()
RETURNS TRIGGER AS $$
BEGIN
    IF NEW.status = 'completed' AND OLD.status != 'completed' THEN
        RAISE NOTICE 'pre_registration % marked as completed, will be cleaned up', NEW.temp_id;
        NEW.updated_at := NOW();
    END IF;
    RETURN NEW;
END;
$$ LANGUAGE plpgsql;

DROP TRIGGER IF EXISTS trigger_cleanup_completed_pre_registration ON public.pre_registration;
CREATE TRIGGER trigger_cleanup_completed_pre_registration
    BEFORE UPDATE OF status ON public.pre_registration
    FOR EACH ROW
    EXECUTE FUNCTION cleanup_completed_pre_registration();

CREATE OR REPLACE FUNCTION delete_old_completed_pre_registration()
RETURNS void AS $$
BEGIN
    DELETE FROM public.pre_registration
    WHERE status = 'completed'
      AND updated_at < NOW() - INTERVAL '10 seconds';
    
    RAISE NOTICE 'Cleaned up % old completed pre-registrations', 
                 (SELECT COUNT(*) FROM public.pre_registration WHERE status = 'completed');
END;
$$ LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION cleanup_completed_pre_registration() TO postgres, anon, authenticated, service_role;
GRANT EXECUTE ON FUNCTION delete_old_completed_pre_registration() TO postgres, anon, authenticated, service_role;

ALTER TABLE lab_request 
ADD COLUMN IF NOT EXISTS reviewed_by INTEGER,
ADD COLUMN IF NOT EXISTS reviewed_at TIMESTAMP,
ADD COLUMN IF NOT EXISTS decline_reason TEXT;

ALTER TABLE public.queue 
ADD COLUMN IF NOT EXISTS completed_by INTEGER REFERENCES public.staff(id);

CREATE INDEX IF NOT EXISTS idx_queue_completed_by ON public.queue(completed_by);

SELECT 'SUCCESS: Enhanced database schema created with scheduled_date support in queue table' AS status;

